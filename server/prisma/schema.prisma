generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  firstName  String
  lastName   String
  bookings   Booking[]
  createdAt  DateTime  @default(now())
}

model Booking {
  id        Int      @id @default(autoincrement())
  userId    Int
  vehicleId Int
  startDate DateTime
  endDate   DateTime

  user      User     @relation(fields: [userId], references: [id])
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])

  @@index([vehicleId])
}

model Vehicle {
  id          Int         @id @default(autoincrement())
  modelName   String
  typeId      Int
  vehicleType VehicleType @relation(fields: [typeId], references: [id])
  bookings    Booking[]
}

model VehicleType {
  id         Int        @id @default(autoincrement())
  name       String
  wheelCount Int        
  vehicles   Vehicle[]
}
